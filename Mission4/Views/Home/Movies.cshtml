@model Mission4.Models.MoviesModel;

<form method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Category">Category</label>
        <select class="form-control" asp-for="Category">
            <option selected disabled hidden>None</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Year">Year</label>
        <input class="form-control" asp-for="Year" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Director">Director</label>
        <input class="form-control" asp-for="Director" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Rating">Rating</label>
        <select class="form-control" asp-for="Rating">
            <option selected disabled hidden>None</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Edited">Edited</label>
        <select class="form-control" asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Lent_To">Lent To</label>
        <input class="form-control" asp-for="Lent_To" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Notes">Notes</label>
        <textarea class="form-control" rows="3" asp-for="Notes"></textarea>
    </div>

    <div asp-validation-summary="All"></div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>